<form method="POST" action="/login">
  <input type="hidden" name="_csrf" value="">
  <div class="container has-text-centered">
     <p>Wrong username or password</p> 
    <div class="column is-4 is-offset-4">
      <h3 class="title has-text-grey">Login</h3>
      <p class="subtitle has-text-grey">Please login to proceed.</p>
      <div class="box">
        <div class="field">
          <div class="control">
            <input class="input is-large" type="text" placeholder="Your username" autofocus="" name="em">
          </div>
        </div>
        <div class="field">
          <div class="control">
            <input class="input is-large" type="password" placeholder="Your Password" name="pw">
          </div>
        </div>
        <button class="button is-block is-info is-large is-fullwidth" value="login">Login</button>
      </div>
    </div>
  </div>
</form>