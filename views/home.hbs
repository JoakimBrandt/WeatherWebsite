<section class="section">
  <div class="container">
    <div class="row columns is-multiline">
      {{#if weather.length}}
      {{#each weather}}
      <div class="column is-one-forth">
        <div class="card large">
          <div align="center">
          <figure class="image is-128x128">
            <img src="http://openweathermap.org/img/wn/{{icon}}@2x.png" alt="Placeholder image">
          </figure>
            <p class="title" >{{name}}</p>
            <p class="title">{{temp}} Â°C</p>
            <p class="subtitle">{{weather}}</p>
            <p class="subtitle">{{description}}</p>
        </div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <p>No weather entries</p>
      {{/if}}
    </div>
  </div>
</section>



